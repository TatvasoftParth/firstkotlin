<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom Input Style -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <!-- Custom RadioButton -->
    <style name="CustomRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
