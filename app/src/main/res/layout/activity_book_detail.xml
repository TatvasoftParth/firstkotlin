<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetailActivity">

    <TextView
        android:id="@+id/book_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_12dp"
        android:text="@string/book_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@id/book_text"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/author_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_12dp"
        android:text="@string/author_name"
        app:layout_constraintTop_toBottomOf="@id/book_name"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/author_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@id/author_text"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/book_type_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_12dp"
        android:text="@string/book_type"
        app:layout_constraintTop_toBottomOf="@id/author_name"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/book_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@id/book_type_text"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/genre_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_12dp"
        android:text="@string/genre"
        app:layout_constraintTop_toBottomOf="@id/book_type"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/genre_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@id/genre_text"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/launch_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_12dp"
        android:text="@string/launch_date"
        app:layout_constraintTop_toBottomOf="@id/genre_value"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/launch_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@id/launch_date_text"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/age_groups_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_12dp"
        android:text="@string/age_group"
        app:layout_constraintTop_toBottomOf="@id/launch_date"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/age_groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@id/age_groups_text"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        android:layout_marginStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@id/age_groups"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.MaterialComponents.Button" />

</androidx.constraintlayout.widget.ConstraintLayout>